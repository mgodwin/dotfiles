# Sample gitconfig
#
# You probably want to change the [user] section here since you are not me.

[hub]
        protocol = https
[user]
        name = Mark Godwin
        email = mark.godwin@logikcull.com
[credential]
        helper = osxkeychain
[alias]
        promote = !$HOME/.dotfiles/bin/git-promote
        hotfix-finish = !$HOME/.dotfiles/bin/git-hotfix-finish
        unstage = reset HEAD --
        count   = !git shortlog -sn
        ls      = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
        filelog = log -u
        graph   = log --graph --oneline --decorate --all
        discard-changes = reset --hard HEAD
        push-upstream = push -u
        find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 -s | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
        show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = ~/.gitignore
        editor = vim
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
	      prompt = false
[difftool]
	      prompt = false
[help]
        autocorrect = 1
[push]
	      default = current
